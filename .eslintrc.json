{
    "root": true,
    "extends": "eslint-config-service-soft",
    "overrides": [
        {
            "files": [
                "*.repository.ts"
            ],
            "parserOptions": {
                "project": [
                    "tsconfig.json"
                ],
                "createDefaultProgram": true
            },
            "rules": {
                "jsdoc/require-jsdoc": "off"
            }
        },
        {
            "files": [
                "*.model.ts"
            ],
            "parserOptions": {
                "project": [
                    "tsconfig.json"
                ],
                "createDefaultProgram": true
            },
            "rules": {
                "@typescript-eslint/no-empty-interface": "off"
            }
        }
    ]
}